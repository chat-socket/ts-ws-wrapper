{
  "name": "ts-ws-wrapper",
  "version": "0.0.0",
  "description": "Lightweight WebSocket wrapper lib with socket.io-like event handling, requests, and channels",
  "main": "",
  "types": "",
  "dependencies": {
    "@types/debug": "0.0.30",
    "debug": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/koa": "^2.0.44",
    "@types/koa-router": "^7.0.27",
    "@types/ws": "^4.0.1",
    "browserify": "^16.2.2",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "jest-cli": "^22.4.2",
    "koa": "^2.0.0",
    "koa-router": "^7.4.0",
    "lint-staged": "^7.0.0",
    "mock-socket": "^9.2.1",
    "nodemon": "^1.17.1",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^5.0.1",
    "tsify": "^4.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "typescript": "^2.7.2",
    "ws": "^1.1.1"
  },
  "scripts": {
    "pretest": "tslint -c tslint.json 'lib/**/*.ts'",
    "precommit": "lint-staged",
    "prepack": "rm -rf dist/ && tsc -p tsconfig.publish.json && npm test",
    "test": "jest --coverage",
    "watch-test": "jest --watch",
    "start-example": "nodemon --exec 'ts-node' example-app/server.ts"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "websocket",
    "ws",
    "typescript",
    "channels",
    "request",
    "namespace"
  ],
  "author": {
    "name": "Simon Johansson",
    "email": "mail@simon-johansson.com",
    "url": "https://github.com/simon-johansson"
  },
  "license": "MIT",
  "homepage": "",
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json 'lib/**/*.ts'",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "ts",
      "example-app/client_build.js"
    ],
    "watch": [
      "example-app"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts",
    "events": {
      "restart": "# tsc -p example-app/tsconfig.json",
      "start": "# tsc -p example-app/tsconfig.json"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": false,
    "coverageDirectory": "coverage/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.(test|spec)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
