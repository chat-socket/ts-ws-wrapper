{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es7", "dom"]
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "lib/**/*.test.ts",
    "dist",
    "node_modules"
  ]
}
